<script type="text/javascript">
    function UserLogin() {
        var Userdata = {
            EmailId: $("#EmailAddress").val(),
            Password: $("#Password").val(),
        }
        $.ajax({
            /*url: '/BlogVacancy/Login',*/
            type: "POST",
            url: "@Url.Action("Login", "BlogVacancy")",
            contentType: 'application/json',
            data: JSON.stringify(Userdata),
            success: function (result) {
                if (result != null) {
                    window.location.href = '/BlogVacancy/blog'
                }
                else {
                    alert("Enter Correct EmailId or Password");
                }

            },
            error: function (result) {
                alert("Enter Correct EmailId or Password");
            }
        });
    }
</script>
