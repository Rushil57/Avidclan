@model Avidclan_BlogsVacancy.ViewModel.UserLogin
@{
    Layout = "~/Views/Shared/_RegistrationTemplate.cshtml";
}
<div class="login-form">
    <form name="registration">
        <div class="avatar"><img src="~/Image/LOGO-ONLY-A.png" class="CompanyLogo" /></div>
        <h4 class="modal-title">Login to Your Account</h4>

        <div class="form-group">
            <label for="exampleInputEmail1" class="required">Email address</label>
            <input type="email" class="form-control" name="email" id="EmailAddress" placeholder="Email">
        </div>
        <div class="form-group password-container">
            <label for="exampleInputPassword1" class="required">Password</label>
            <input type="password" class="form-control" name="password" id="Password" placeholder="Password">
            <i class="mdi mdi-eye-off toggle-password"></i>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $("form[name='registration']").validate({
            rules: {
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true,
                }
            },
            messages: {
                password: {
                    required: "Please enter a password",
                },
                email: {
                    required: "Please enter email address",
                    email: "Please enter a valid email address"
                }
            },
            submitHandler: function (form) {
               var Userdata = {
                EmailId: $("#EmailAddress").val(),
                Password: $("#Password").val(),
            }
            $.ajax({
                type: "POST",
                url: "@Url.Action("Login", "BlogVacancy")",
                contentType: 'application/json',
                data: JSON.stringify(Userdata),
                success: function (result) {
                    if (result.RoleName == "Admin") {
                        window.location.href = '/BlogVacancy/blog'
                    }
                    if (result.RoleName == "Employee") {
                        window.location.href = '/Leave/Index'
                    }
                    if(result == null) {
                        alert("Enter Correct EmailId or Password");
                    }

                },
                error: function (result) {
                    alert("Enter Correct EmailId or Password");
                }
            });
            }
        });

      $(".toggle-password").click(function() {
            var input = $("#Password");
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
            $(this).toggleClass("mdi-eye-outline");
        });
    });
</script>
