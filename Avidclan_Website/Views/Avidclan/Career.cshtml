@model IEnumerable<Avidclan_Website.Models.Career>

@{
    ViewBag.Title = "Career";
}
@*<title>Top Software, Web & Mobile App Development Company in India</title>*@
@section AdditionalMeta
{
    <title>
        Join Our Team | Exciting Job Openings and Career Opportunities Await You
    </title>
    <meta name="description" content="Discover exciting career opportunities at Avidclan. Browse our current job openings and take the next step in your professional journey by joining our dynamic team." />
    <link rel="canonical" href="https://www.avidclan.com/career/" />
    <link rel="stylesheet" href="~/assets/css/Avidclan/career.css" />
    <link rel="stylesheet" href="~/assets/css/Avidclan/contactus.css" />

    @Html.Partial("_ApplyJob")
}


<section class="inner-page contact-section">
    <div class="container">
        <div class="content-box">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div>
                        <h1>Grab the <span class="primary-color">opportunity </span> to work for the best in the IT industry!</h1>
                        <div class="text">
                            Want to work in the IT industry and looking for a job? You came to the right place. Show us what you got, and the job is yours!
                        </div>
                    </div>
                </div>
                <div class="image col-md-12 col-lg-4">
                    <img src="~/assets/images/career-img.svg" alt="career" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Career-info Section -->
<section class="about-section">
    <div class="container">
        <!-- Section Title for Small Screens -->
        <div class="row sm_only">
            <div class="col-xl-12">
                <div class="avidclan_section_title text-center mb-50">
                    <div class="sec-title">
                        <h2 class="p-0 header_subtitle text-start">
                            Ready to build your dream career in the IT company? We can help
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Image Column -->
            <div class="col-md-6 d-flex justify-content-center align-items-center img-col my-3">
                <img src="/assets/images/helping-partner-concept-illustration.svg"
                     alt="career-banner"
                     width="400"
                     height="400"
                     class="lazyload img-fluid"
                     loading="lazy"
                     style="object-fit: contain; max-width: 100%; height: 400px; filter: none; opacity: 1; mix-blend-mode: normal;" />
            </div>

            <!-- Text Column -->
            <div class="col-lg-6 col-md-6 col-about_description">
                <div class="sec-title">
                    <h2 class="lg_only">
                        Ready to build your dream career in the IT company? We can help
                    </h2>
                    <div class="text description-18 my-0 gap-25_description">
                        <div>
                            Imagine working globally and collaborating with diverse businesses and brands worldwide. That is precisely what Avidclan Technologies offers its employees - more than simply jobs! At Avidclan Technologies, this opportunity exists - you'll have a chance to grow alongside our ingenuity and talent as we make an impactful difference in the world!
                        </div>
                        <div>
                            Our team of professionals is empowered. Your ideas are taken seriously and put into action - don't be shy about pushing boundaries - we provide all the resources and support necessary for turning creative energy into impactful results.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="career-section" id="career-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="avidclan_section_title text-center mb-5">
                    <h5 class="avidclan_sub_title primary-color">OPENINGS</h5>
                    <div class="sec-title mb-0">
                        <h2>Current Openings</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="career-block">
                        <div class="job-block">
                            <h5 class="job-title">@item.JobTitle</h5>
                            <span class="position-count" data-bs-toggle="tooltip" title="Position Available">@item.NoOfPosition</span>
                        </div>
                        <div class="desc">
                            <div class="exp me-4">
                                <span class="lbl"><span class="iconify me-1 text-primary" data-icon="ic:twotone-work-outline"></span>Exp:</span>
                                @item.Experience
                            </div>
                            <div class="loc">
                                <span class="lbl"><span class="iconify me-1 text-primary" data-icon="ep:location"></span>Location:</span>
                                @item.Location
                            </div>
                        </div>
                        <div class="devider"></div>
                        <div class="footer">
                            <div class="btn-box me-3">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#ModalApplyJob" class="btn btn-primary fw-bold rounded-2 mt-0" onclick="OpenApplyJobModal();">
                                    <span class="btn-title">Apply Now</span>

                                </a>
                            </div>



                            <div class="btn-box mt-0">
                                <button data-bs-toggle="modal"
                                        data-bs-target="#ModalJobDescDotNet"
                                        class="theme-btn btn-style-one jobdes-link" id="OpenModalPopup" onclick="OpenRolesModal(@item.Id)">
                                    <span class="btn-title">Job Description</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<!--  Process Section -->
<section class="process-section hiring-process testimonial-section-two">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="avidclan_section_title text-center mb-50">
                    <h5 class="avidclan_sub_title primary-color">WORKING PROCESS</h5>
                    <div class="sec-title"><h2>Our Tech Hiring Process</h2></div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-2 process-block-one">
                <div class="inner-box">
                    <div class="icon"><img src="~/assets/images/meeting.svg" alt="meeting" /></div>
                    <h4>
                        Initial<br />
                        Interaction
                    </h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-2 process-block-one">
                <div class="inner-box">
                    <div class="icon"><img src="~/assets/images/task-list.svg" alt="task-list" /></div>
                    <h4>
                        Technical<br />
                        Interview
                    </h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-2 process-block-one">
                <div class="inner-box">
                    <div class="icon"><img src="~/assets/images/blogger.svg" alt="blogger" /></div>
                    <h4>
                        Real-time<br />
                        Assignment
                    </h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-2 process-block-one">
                <div class="inner-box">
                    <div class="icon"><img src="~/assets/images/interview.svg" alt="interview" /></div>
                    <h4>
                        Final HR<br />
                        Discussion
                    </h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-2 process-block-one">
                <div class="inner-box">
                    <div class="icon"><img src="~/assets/images/offer.svg" alt="offer" /></div>
                    <h4>
                        Offer<br />
                        Rollout !
                    </h4>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Footer")

<script type="text/javascript">
    function OpenApplyJobModal() {
        CareerOption();
    }

    function OpenRolesModal(id) {
         $.ajax({
            url: '@Url.Action("GetRolesResponsiblity", "Avidclan")',
            contentType: 'application/json',
            data: { Id: id },
            type: "GET",
            success: function (result) {
                $(".sec-title h3").html(result.JobTitle);
                $('<li />', { html: result.Responsibilities }).appendTo('ul.list');
                $(".Qualification").html(result.Qualification);
            },
            error: function () {
                alert('failure');
            }
        });
    }
</script>