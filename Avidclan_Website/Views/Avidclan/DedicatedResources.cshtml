<!-- Contact Section -->
<section id="contact" class="contact">
    <div class="contact-container">
        <div class="contact-info">
            <h2>Start Your Partnership</h2>
            <p>
                Ready to transform your technology needs? Our team of experts...
            </p>

            <div class="contact-item">
                <div class="contact-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div class="contact-details">
                    <div class="label">Email</div>
                    <div class="value">solutions@avidclan.com</div>
                </div>
            </div>

            <div class="contact-item">
                <div class="contact-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <div class="contact-details">
                    <div class="label">Phone</div>
                    <div class="value">+91 95584 50670</div>
                </div>
            </div>

            <div class="contact-item">
                <div class="contact-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <div class="contact-details">
                    <div class="label">Location</div>
                    <div class="value">Ahmedabad, India</div>
                </div>
            </div>
        </div>

        <form method="post"
              action="https://www.avidclan.com/contact-form-handler.php"
              class="contact-form contact_form"
              name="dedicatedresourcesform"
              id="dedicated_form"
              onsubmit="return redirectToThankYou();">


            <div class="form-group">
                <label for="firstname" class="form-label">Name</label>
                <input type="text" id="firstname" name="firstname" class="form-input" placeholder="Your name" required />
            </div>

            <div class="form-group">
                <label for="company" class="form-label">Company Name</label>
                <input type="text" id="lastname" name="lastname" class="form-input" placeholder="Your company name" required />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="Your email" required />
            </div>

            <div class="form-group">
                <label for="phone" class="form-label">Phone</label>
                <input type="hidden" name="code" value="ccode" />
                <input type="tel" id="phone" name="phone" class="form-input numberonly" maxlength="10" placeholder="Your phone number" />
            </div>

            <div class="form-group">
                <label for="message" class="form-label">Project Requirements</label>
                <textarea id="message" name="message" class="form-textarea" placeholder="Tell us about your project needs..." required></textarea>
            </div>

            <div class="form-group">
                @Html.Recaptcha()
            </div>

            <button type="submit" id="sbmtbtn" class="rounded-5 submit-btn">Submit Requirements</button>
        </form>

        <script>
            function redirectToThankYou() {
                setTimeout(function () {
                    window.location.href = "https://www.avidclan.com/contact-us-thank-you";
                }, 1500); // 1.5 seconds delay to let form submit
                return true;
            }
        </script>


    </div>
</section>

