<!-- Contact Form Section -->
<section class="contact-form-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 pe-0 pe-md-5">
                <h4 class="avidclan_ralign_subtitle">CONTACT US</h4>
                <div class="sec-title">
                    <h2 class="pb-2">Reach Out and Let's Start a Conversation</h2>
                    <div class="text">
                        Get in touch with us and let us assist you with your queries and needs. Whether you have specific
                        requirements, inquiries, or simply want to share your thoughts, we're here to listen and assist you.
                        <br /><br />
                        To get started, please fill out the form with your contact details and a brief description of your
                        inquiry. This will help us understand your requirements better and enable us to respond promptly. We
                        value your time and look forward to connecting with you to address any questions or concerns you may
                        have.
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <form method="post"
                              action="contact-form-handler.php"
                              class="contact-form contact_form"
                              name="contactinfo"
                              id="contact_form">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="firstname">First Name</label>
                                    <div class="input-group">
                                        <input type="text" name="firstname" id="firstname" placeholder="First Name" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <label for="lastname">Last Name</label>
                                    <div class="input-group">
                                        <input type="text" name="lastname" id="lastname" placeholder="Last Name" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <label for="email">Email</label>
                                    <div class="input-group">
                                        <input type="email" name="email" id="email" placeholder="Email Address" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <label for="phone">Phone</label>
                                    <div class="input-group">
                                        <input id="code" value="ccode" type="hidden" name="code" />
                                        <input type="tel" name="phone" id="phone" class="numberonly" />

                                    </div>
                                </div>

                                <div class="col-md-12 form-group">
                                    <label for="message">Message</label>
                                    <textarea name="message" id="message"></textarea>
                                </div>

                                <div class="col-md-12 form-group">
                                    <label for="captcha">Please Verify You Are a Human</label>
                                    @Html.Recaptcha()
                                    @*<div class="g-recaptcha" data-sitekey="6LeWHTseAAAAAMQvKFnHOU1KCsIeAhX4LF7EhrCk"></div>*@
                                </div>

                                <div class="col-md-12 form-group mb-0 text-center">
                                    <div class="">
                                        <button class="theme-btn btn-style-one" name="submit" type="submit" id="sbmtbtn">
                                            <span class="btn-title">
                                                Send Message <span class="iconify ms-1" data-icon="line-md:email" data-height="25"></span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

