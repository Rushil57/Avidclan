    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const slider = document.querySelector(".testimonial-slider");
            const prevBtn = document.querySelector(".testimonial-slider + .slider-controls .prev");
            const nextBtn = document.querySelector(".testimonial-slider + .slider-controls .next");
            const items = document.querySelectorAll(".testimonial-slider .testimonial-item");

            if (slider && items.length > 0 && prevBtn && nextBtn) {
                let itemsArray = Array.from(items);
                const originalItemCount = itemsArray.length;
                const cloneCount = 6;

                // Clone forward
                for (let i = 0; i < cloneCount; i++) {
                    itemsArray.forEach(item => {
                        const clonedItem = item.cloneNode(true);
                        slider.appendChild(clonedItem);
                    });
                }

                // Clone backward
                for (let i = 0; i < cloneCount; i++) {
                    itemsArray.slice().reverse().forEach(item => {
                        const clonedItem = item.cloneNode(true);
                        slider.insertBefore(clonedItem, slider.firstChild);
                    });
                }

                const itemWidth = items[0].offsetWidth + 20; // includes gap
                const actualContentWidth = itemWidth * originalItemCount;
                slider.scrollLeft = itemWidth * cloneCount;

                let isScrolling;
                let isAutoScrolling = false;

                const handleScroll = () => {
                    if (isAutoScrolling) return; // Don't loop-correct during auto scroll

                    if (slider.scrollLeft <= itemWidth * (cloneCount - 1)) {
                        slider.scrollLeft += actualContentWidth;
                    } else if (
                        slider.scrollLeft >= itemWidth * (cloneCount + originalItemCount) - slider.clientWidth
                    ) {
                        slider.scrollLeft -= actualContentWidth;
                    }

                    isScrolling = null;
                };

                // Scroll listener (only if user scrolls manually)
                slider.addEventListener('scroll', () => {
                    if (isAutoScrolling) return;
                    clearTimeout(isScrolling);
                    isScrolling = setTimeout(handleScroll, 150);
                }, { passive: true });

                // Controlled scroll with flag
                const scrollWithFlag = (amount) => {
                    isAutoScrolling = true;
                    slider.scrollBy({ left: amount, behavior: "smooth" });
                    setTimeout(() => {
                        isAutoScrolling = false;
                    }, 400); // match animation duration
                };

                nextBtn.addEventListener("click", () => {
                    scrollWithFlag(itemWidth);
                });

                prevBtn.addEventListener("click", () => {
                    scrollWithFlag(-itemWidth);
                });

                // Optional click-to-scroll feature (on slider area)
                slider.addEventListener("click", (event) => {
                    if (event.target.closest('button') || window.getSelection().toString()) {
                        return;
                    }

                    const clickPosition = event.clientX;
                    const sliderRect = slider.getBoundingClientRect();
                    const centerPosition = sliderRect.left + sliderRect.width / 2;

                    scrollWithFlag(clickPosition < centerPosition ? -itemWidth : itemWidth);
                });
            }
        });


    </script>

