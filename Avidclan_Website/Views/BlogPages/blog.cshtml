@section AdditionalMeta
{
    <title id="htmltitle">@ViewBag.MetaTitle</title>
    <meta name="description" content="@ViewBag.MetaData">
    <link rel="canonical" href="@ViewBag.Url" />
    <link rel="stylesheet" href="~/assets/css/Avidclan/blog.css" />
    <script type="application/ld+json">
        {
          "@context": "https://schema.org/",
          "@type": "BreadcrumbList",
