<style>
    h3 {
        margin-bottom: 0px !important;
    }
</style>

<section class="blog-section">
    <div class="container">
        <div class="blog-details-wrap">
            <!-- Blog Details Post Start -->
            <div class="blog-details-post">
                <!-- Single Blog Start -->
                <div class="single-blog">
                    <h1 class="title" id="Blogtitle"></h1>
                    <div class="blog-img">
                        <a href="#"><img id="blogImage" src="" alt="" /></a>

                        <div class="top-meta">
                            <span class="tag" id="blogTag"></span>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-meta" style="padding: 10px;">
                            <span id="admin"><i class="fas fa-user"></i> <a href="#"></a></span>
                            <span id="spanDate"><i class="far fa-calendar-alt"></i></span>
                        </div>
                        @Html.Raw(ViewBag.HtmlData)

                        <section class="FAQ-section testimonial-section-two">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="avidclan_section_title text-center mb-50">
                                            <h5 class="avidclan_sub_title primary-color">FIND USEFUL</h5>
                                            <div class="sec-title"><h2>Frequently Asked Questions</h2></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="accordion" id="accordionExample">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
                <!-- Single Blog End -->

            </div>
            <!-- Blog Details Post End -->
        </div>
    </div>
</section>
<section class="lets-talk">
    <div class="container">
        <div class="inner-block">
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-8 col-xl-7">
                    <div class="sec-title mb-0">
                        <p class="m-1">Require a solution to your software problems?</p>
                        <h2>Want to get in touch?</h2>
                        <div>
                            <span class="b-txt"><b>Have an idea?</b></span> Do you need some help with it? Avidclan would love
                            to help you! Kindly click on ‘Contact Us’ to reach us and share your query.
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4 col-xl-5 text-end">
                    <div class="btn-box">
                        <a href="~/contact-us/" class="theme-btn btn-style-one btn-light">
                            <span class="btn-title"><span class="iconify me-2" data-icon="ion:call-sharp" data-height="25"></span>Contact Us</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_FooterWith190")


<script type="text/javascript">
    $(document).ready(function () {
        GetBlogDetails();
    });
    function GetBlogDetails() {
        var id = localStorage.getItem("BlogId");
        var date = localStorage.getItem("BlogDate");
        $.ajax({
                url: '@Url.Action("GetBlogData", "Avidclan")',
                contentType: 'application/json',
                data: { Id: id },
                type: "GET",
                success: function (result) {
                    if (result != null) {
                        var fromdate = moment(result.bloglist[0].PostingDate).format('MM/DD/YYYY  HH:mm:ss');
                        var options = { year: 'numeric', month: 'long', day: 'numeric' };
                        var PostingDate = new Date(fromdate);
                        var longDt = PostingDate.toLocaleDateString("en-US", options);

                        $("#blogTag").html(result.bloglist[0].BlogType)
                        $("#Blogtitle").html(result.bloglist[0].Title)
                        $("#admin a").html(result.bloglist[0].PostedBy)
                        $('#blogImage').attr('src', result.bloglist[0].Image);
                        $("#spanDate").html(longDt)
                        var sectionblog = "";
                        var count = 1;
                        if (result.blogfaqslist == 0) {
                            $(".FAQ-section").css("display", "none")
                        }
                        else {
                            $(".FAQ-section").css("display", "block")
                            $.each(result.blogfaqslist, function (key, val) {
                                sectionblog = '<div class="accordion-item" style="margin-bottom: 20px">' +
                                    '<h2 class="accordion-header" id="heading' + count + '">' +
                                    '<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"' +
                                    'data-bs-target="#collapse' + count + '" aria-expanded="true" aria-controls="collapse' + count + '">' +
                                    '' + val.Questions + '' +
                                    '</button>' +
                                    '</h2>' +
                                    '<div id="collapse' + count + '" class="accordion-collapse collapse" aria-labelledby="headingOne"' +
                                    'data-bs-parent="#accordionExample">' +
                                    '<div class="accordion-body">' +
                                    val.Answers +
                                    '</div>' +
                                    '</div>' +
                                    '</div>'
                                count++;
                                $('#accordionExample').append(sectionblog);
                            });
                        }
                    }
                },
                error: function () {
                    alert('failure');
                }
        });
    }

</script>
